<!DOCTYPE html>
<html>
 <%- include('./partials/head') %> 
  <body>
    <!-- Navbar (sit on top) -->
   <%- include('./partials/navBar') %> 
    <!-- Header -->
    <%- include('./partials/header') %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <div class="ps-row ps-padding-64" id="about">
        <div class="ps-col m6 ps-padding-large ps-hide-small">
          <% about.forEach(parte => { %>
          <img
            src="/images/<%= parte.image %> "
            class="ps-round ps-image ps-opacity-min"
            alt="SAbores que enamoran"
            width="600"
            height="750"
          />
        </div>

        <div class="ps-col m6 ps-padding-large">
            <h1 class="ps-center"><%= parte.titulo %> </h1>
            <br />
            <p class="ps-large">
              <%= parte.uno %> 
              <span class="ps-tag ps-light-grey">seasonal</span> ingredients.
            </p>
            <p class="ps-large ps-text-grey ps-hide-medium">
              <%= parte.dos %> 
          <% }) %>
          
          
        </div>
      </div>

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
            <br />
          <% menu.forEach(orden => { %>
            <h4><a href="/detail/<%= orden.id %>" class="titulo">â— <%= orden.name %></a></h4>
            <p class="ps-text-grey">
              <%= orden.description %> U$S <%= orden.price.toFixed(2) %> 
            </p>
            <br />
          <% }) %>
          

        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
     <%- include('./partials/footer') %> 
    </div>
  </body>
</html>
